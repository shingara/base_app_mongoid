source 'http://rubygems.org'

gem 'rails', '3.0.3'
gem 'mongoid',
  :git => 'git://github.com/mongoid/mongoid.git'
gem 'haml'
gem "haml-rails"
gem 'devise'
gem 'bson_ext'
gem 'inherited_resources'

gem "nifty-generators", :group => :development

