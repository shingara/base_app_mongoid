%h2=t('.title_h2')
= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  %fieldset
    = f.input :email
    = f.input :password
  .actions.remember
    = f.input :remember_me, :as => :boolean, :wrapper => false
    = f.button :submit, :class => 'btn primary', :value => t('.sign_in')
    %br
    = render :partial => "devise/shared/links"
