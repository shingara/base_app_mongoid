  gem 'factory_girl',
    :git => 'git://github.com/thoughtbot/factory_girl.git'
  gem "rspec-rails"
  gem 'mongoid-rspec',
    :git => 'git://github.com/shingara/mongoid-rspec.git',
    :branch => 'mongoid-2.0.0.rc1'
end
